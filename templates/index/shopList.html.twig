{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <style>
        .itemClass {
            text-decoration: none;
            color: #222222;
        }

        .itemClass:hover {
            text-decoration: none;
            color: #222222;
        }
    </style>
    <div class="example-wrapper">
        <h1>{{ title }}</h1>
        <hr>

        <div class="row">
            {% for item in items %}
                <div class="col-md-4">
                    <a href="{{ path('shopItem', {'id': item.id}) }}" class="itemClass">
                        <div class="card mb-4 shadow-sm">
                            <img src="{{ item.image }}" alt="" class="bd-placeholder-img card-img-top" width="100%" height="225">
                            <div class="card-body">
                                <h4>{{ item.title }}</h4>
                                <p class="card-text">{{ item.description[:37] }}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5>{{ item.price }} руб.</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
